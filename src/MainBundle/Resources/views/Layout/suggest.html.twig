                        {% endif %}
                    {% endif %}

                    {% if serieSug.poster == "undefined" %}
                        <img src="{{ asset('public/img/undefined.jpg') }}">
                    {% else %}
                        <a href="{{ path('main_serie', {'_locale': app.request.attributes.get('_locale'), 'idSerie': serieSug.Id.__toString}) }}">
