{% set i = 0 %}
        {% for serieSug in serieSuggest %}
            <div>
                <div class="suggestSerie">
                    {% if serieSuggest|length <0 %}
                        <p class="error">{{ 'Error'|trans() }}</p>
                        <img src="{{ asset('public/img/undefined.jpg') }}" width="100%">
                    {% endif %}

                    {% if i == 0 %}
                        {% if serieSug == serieSuggest["0"] %}
                            <p>{{ 'If you like'|trans }} </p>
                        {% endif %}
                    {% endif %}

                    {% if serieSuggest|length <1 %}
                        <p class="error">{{ 'Error'|trans() }}</p>
                        <img src="{{ asset('public/img/undefined.jpg') }}" width="100%">
                    {% endif %}
                    {% if i == 1 %}
