{% extends 'MainBundle::base.html.twig' %}

{% block title %}{{ 'Home'|trans }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% include "MainBundle:Layout:header.html.twig" %}
    {% else %}
        {% include "MainBundle:Layout:headerLogin.html.twig" %}
    {% endif %}
{% endblock %}

{% block content %}
    {# Caroussel #}
    <!-- Carousel Bootstrap -->

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img alt="" src={{ asset('public/img/undefined.jpg') }}>
                <div class="carousel-caption">
                    {#<h3>{{ serie.title }}</h3>#}
                    <p></p>
                </div>
            </div>

            <div class="item">
                <img alt="" src={{ asset('public/img/undefined.jpg') }}>
                <div class="carousel-caption">
                    {#<h3>{{ serie.title }}</h3>#}
                    <p></p>
                </div>
            </div>

            <div class="item">
                <img alt="" src={{ asset('public/img/undefined.jpg') }}>
                <div class="carousel-caption">
                    {#<h3>{{ serie.title }}</h3>#}
                    <p></p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="registerVisit">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% include "MainBundle:Layout:menu.html.twig" %}
        {% else %}
            {% include "MainBundle:Layout:register.html.twig" %}
            {% include "MainBundle:Layout:visit.html.twig" %}
        {% endif %}
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}
