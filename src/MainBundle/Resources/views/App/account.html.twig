{% extends 'MainBundle::base.html.twig' %}

{% block title %}{{ 'Account'|trans }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {% include "MainBundle:Layout:header.html.twig" %}
{% endblock %}

{% block content %}
    {% include "MainBundle:Layout:menu.html.twig" %}
    <div>
        <h3>{{ "General informations"|trans }}</h3>
        <form action="{{ path("main_account", {_locale: app.request.attributes.get('_locale')}) }}" method="post">
            <label for="username">{{'User'|trans}}</label></br>
            <p><input class="form-control" type="text" id="firstname" name="firstname" placeholder="{{ "Firstname"|trans }}" value="{{ user.firstname }}" required /></p>
            <p><input class="form-control" type="text" id="lastname" name="lastname" placeholder="{{ "Lastname"|trans }}" value="{{ user.lastname }}" required /></p>
            <p><input class="form-control" type="text" id="username" name="username" placeholder="{{ "Username"|trans }}" value="{{ user.username }}" required /></p>

            <label for="email">{{'Mail'|trans}}</label></br>
            <p><input class="form-control" type="email" id="email" name="email" placeholder="{{ "Mail"|trans }}" value="{{ user.email }}" required /></p>

            <p><input class="btn btn-info btn-sm" type="submit" id="_submit" name="submit" value={{'Save information'|trans}}></p>
        </form>
    </div>
    <div>
        <h3>{{ "Password modification"|trans }}</h3>
        <form action="{{ path("main_account", {_locale: app.request.attributes.get('_locale')}) }}" method="post">
            <label for="password">{{'Password'|trans}}</label></br>
            <p><input class="form-control" type="password" id="password" name="password" placeholder="{{ "Password"|trans }}" required /></p>
            <p><input class="form-control" type="password" id="passwordConfirmation" name="passwordConfirmation" placeholder="{{ "Password confirmation"|trans }}" required /></p>
            <p><input class="btn btn-danger" type="submit" id="_submit" name="submit" value={{'Confirm password change'|trans}}></p>
        </form>
    </div>
    
    {% if serieSuggest is not empty %}
        {% include "MainBundle:Layout:suggest.html.twig" %}
    {% endif %}
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

