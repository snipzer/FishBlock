{% extends 'MainBundle::base.html.twig' %}

{% block include %}
    {% include "MainBundle:Layout:accountBlock.html.twig" %}
    {% include "MainBundle:Layout:menu.html.twig" %}
    {% include "MainBundle:Layout:detailSerie.html.twig" %}
    {% include "MainBundle:Layout:listSeason.html.twig" %}
{% endblock %}

{% block title %}Series{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="listSeason">
        <ul>
            {% for episode in episodes %}
                <li> {{ episode.title }}</li>
            {% else %}
                <li>Episodes not found</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

